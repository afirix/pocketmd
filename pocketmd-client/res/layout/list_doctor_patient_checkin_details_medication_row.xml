<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/medication_list_row_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignBaseline="@+id/medication_list_row_taken_checkbox"
        android:padding="@dimen/list_row_padding" />

    <CheckBox
        android:id="@+id/medication_list_row_taken_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/medication_list_row_intake_time_label"
        android:padding="@dimen/list_row_padding"
        android:clickable="false" />

    <TextView
        android:id="@+id/medication_list_row_intake_time_label"
        android:layout_width="@dimen/checkin_details_medication_grid_first_column_spacer"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/medication_list_row_taken_checkbox"
        android:padding="@dimen/list_row_padding" />

</RelativeLayout>